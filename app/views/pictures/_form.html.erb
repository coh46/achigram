<p id="notice"><%= notice %></p>

<%= form_for(@picture, url: choose_new_or_edit) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <%= f.label :本文 %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.label :画像 %>
  <%= f.file_field :image, class: 'form-control' %>
  <br>
  <%= f.submit '投稿内容を確認する', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "投稿一覧に戻る", pictures_path %>
